<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>


<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.week10.SearchViewController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Movie Name" />
                  <TextField fx:id="searchTextField" promptText="Enter Movie Name" />
                  <Button mnemonicParsing="false" onAction="#getSearchResults" text="Search" />
               </children>
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </HBox>
         </top>
         <left>
            <ListView fx:id="initialMovieDataListView" prefHeight="501.0" prefWidth="375.0" BorderPane.alignment="CENTER" />
         </left>
         <center>
            <ImageView fx:id="posterImageView" fitHeight="315.0" fitWidth="302.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
         </center>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <right>
            <StackPane BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="getDetailsButton" mnemonicParsing="false" text="Get More Detials -&gt;" />
               </children>
            </StackPane>
         </right>
         <bottom>
            <Label fx:id="errMsgLabel" text="Movie not found" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="20.0" />
               </BorderPane.margin>
            </Label>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
